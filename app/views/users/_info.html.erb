<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to user_followings_path(user), class: 'list-content' do %>
        <%= user.followings.count %>
      <% end %>
      </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user_followers_path(user), class: 'list-content' do %>
        <%= user.followers.count %>
      <% end %>
    </th>
  </tr>
</table>

<% if current_user != user %>
  <% if current_user.following?(user) %>
  
    <div class="btn btn-primary btn-sm p-0 my-2 mx-auto d-block" >
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'nav-link text-white' %>
    </div>
    <% else %>
    <div class="btn btn-success btn-sm p-0 my-2 text-center mx-auto d-block" >
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'nav-link text-white' %>
    </div>
  <% end %>
<% end %>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>


